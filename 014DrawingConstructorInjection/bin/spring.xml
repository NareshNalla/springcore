<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="triangle" class="com.sekharit.spring.Triangle">
		<constructor-arg ref="p1" />
		<constructor-arg ref="p2" />
		<constructor-arg ref="p3" />
	</bean>

	<bean id="circle" class="com.sekharit.spring.Circle">
		<constructor-arg ref="p4" />
	</bean>

	<bean id="p1" class="com.sekharit.spring.Point">
		<constructor-arg value="10" />
		<constructor-arg value="20" />
	</bean>

	<bean id="p2" class="com.sekharit.spring.Point">
		<constructor-arg value="15" />
		<constructor-arg value="25" />
	</bean>

	<bean id="p3" class="com.sekharit.spring.Point">
		<constructor-arg value="30" />
		<constructor-arg value="40" />
	</bean>

	<bean id="p4" class="com.sekharit.spring.Point">
		<constructor-arg value="0" />
		<constructor-arg value="0" />
	</bean>

</beans>
